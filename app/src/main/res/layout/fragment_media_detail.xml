<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.MediaDetailFragment">


    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/media_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_baseline_circle_24"
        android:src="@drawable/ic_play_button"
        />

    <TextView
        android:id="@+id/media_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="250dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="72sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/media_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1,001 Nights, also known as The Thousand and One Nights or Arabian Nights, is a collection of Middle Eastern and South Asian folk tales that were originally published together during the Islamic Golden Age. The stories --- from historical tales to tragic romances to comedies --- were collected over many centuries by a huge range of scholars and authors. Read below to find ten of the most standout stories."
        app:layout_constraintTop_toBottomOf="@+id/media_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp"
        android:textSize="27sp"
        android:text="date"
        android:gravity="center"
        android:background="@drawable/radius_transparent_box"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/media_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="680dp" />


    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/back_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Meditation Details"
        android:clickable="true"
        android:background="@color/black"
        android:drawableLeft="@drawable/ic_media_back"

        android:textSize="30sp"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>